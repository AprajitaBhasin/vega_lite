{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/AprajitaBhasin/vega_lite/main/1_symbol_map/data/fire_archive_M6_96619.csv"
  },
  "params": [
    {
      "name": "Confidence_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 10,
        "name": "Minimum Confidence: "
      }
    },
    {
      "name": "Satellite_selection",
      "bind": {
        "input": "select",
        "options": [null, "Aqua", "Terra"],
        "labels": ["Show All", "Aqua", "Terra"],
        "name": "Satellite Selection: "
      }
    }
  ],
  "width": 600,
  "height": 400,
  "transform": [
    {"filter": "datum.frp > 0"},
    {"filter": "datum.confidence > Confidence_above"},
    {
      "filter": "Satellite_selection == null || datum.satellite == Satellite_selection"
    }
  ],
  "mark": {
    "type": "circle",
    "opacity": 0.8,
    "stroke": "black",
    "strokeWidth": 0.3
  },
  "encoding": {
    "x": {
      "field": "frp",
      "type": "quantitative",
      "title": "Fire Radiative Power (Megawatts)",
      "axis": {"grid": false},
      "scale": {"type": "log", "domain": [1, 5000]}
    },
    "y": {
      "field": "brightness",
      "type": "quantitative",
      "axis": {"title": "Brightness (Kelvin)"}
    },
    "size": {
      "field": "confidence",
      "type": "quantitative",
      "title": "Confidence (%)",
      "legend": {"clipHeight": 30},
      "scale": {"rangeMax": 100}
    },
    "color": {"field": "satellite", "type": "nominal", "title": "Satellite"}
  },
  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "black",
        "strokeWidth": 0.3
      }
    },
    {"mark": "rule", "encoding": {"x": {}}}
  ],
  "config": {}
}