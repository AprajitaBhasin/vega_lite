{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/AprajitaBhasin/vega_lite/main/data/fire_archive_M6_96619.csv"
  },
  "params": [
    {
      "name": "Confidence_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 10,
        "name": "Minimum Confidence: "
   }
    },
    {
      "name": "daynight_selection",
      "bind": {
        "input": "select",
        "options": [null, "D", "N"],
        "labels": ["Show All", "Day", "Night"],
        "name": "Day/Night Selection: "
      }
    }
  ],
  "width": "container",
  "height": 400,
  "transform": [
    {"filter": "datum.frp > 0"},
    {"filter": "datum.confidence >= Confidence_above"},
    {
      "filter": "daynight_selection == null || datum.daynight == daynight_selection"
    }
  ],


  "layer": [
    {"params":[

    {
      "name":"grid",
      "select": "interval",
      "bind":"scales"

    }
    ],


      "mark": {
        "type": "circle",
        "opacity": 0.6,
        "stroke": "black",
        "strokeWidth": 0.3
      },
      "encoding": {
        "x": {
          "field": "frp",
          "type": "quantitative",
          "title": "Fire Radiative Power (Megawatts)",
          "axis": {"grid": false},
          "scale": {"type": "log", "domain": [1, 5000]}
        },
        "y": {
          "field": "brightness",
          "type": "quantitative",
          "axis": {"title": "Brightness (Kelvin)"},
          "scale": {"domain": [200,550]}
        },
        "size": {
          "field": "confidence",
          "type": "quantitative",
          "title": "Confidence (%)",
          "legend": {"clipHeight": 30}
        },

        "color": {
          "field": "daynight",
          "type": "nominal",
          "title": "Day/Night",
          "condition": {"test": "datum['frp'] > 3000", "value": "#7f0000"},
          "scale": {
            "domain": ["D", "N"],
            "range": ["#e7ba52", "#696969"]
          }
        },
        "tooltip": [
          {"field": "frp", "title": "FRP (MW)", "type": "quantitative"},

          {
            "field": "brightness",
            "title": "Brightness (K)",
            "type": "quantitative"
          },
          {
            "field": "confidence",
            "title": "Confidence (%)",
            "type": "quantitative"
          },

          {
            "field": "acq_date",
            "title": "Data Acquisition Date",
            "type": "temporal"
          }
        ]
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {"aggregate": "mean", "field": "frp"},
        "color": {"value": "#7f0000"},
        "size": {"value": 3}
      }
    },
    {
      "mark": {
        "type": "text",
        "style": "label",
        "align": "left",
        "dx": 3,
        "dy":120,
        "font": "sans-serif",
        "fontWeight":"bold"
      },
      "encoding": {
        "x": {"aggregate": "mean", "field": "frp"},
        "text": {"aggregate": "mean", "field": "frp"}
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {"aggregate": "mean", "field": "brightness"},
        "color": {"value": "#7f0000"},
        "size": {"value": 3}
      }
    },
    {
      "mark": {
        "type": "text",
        "style": "label",
        "align": "left",
        "dx": -550,
        "dy": -10,
        "font": "sans-serif",
        "fontWeight":"bold"
      },
      "encoding": {
        "y": {"aggregate": "mean", "field": "brightness"},
        "text": {"aggregate": "mean", "field": "brightness"}
      }
    }
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 14}}
}
